<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規登録</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <p>名前・メールアドレス・パスワードを入力してください。</p>
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
              </div>
              <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前" %>
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
              </div>
              <%= f.text_field :password, autocomplete: "off", class:"form-control", placeholder:"メールアドレス" %>
            </div>
            <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
            </div>
            <%= f.password_field :password, placeholder: "パスワード(#{@minimum_password_length}文字以上)", class: "form-control" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-circle-check"></i></span>
            </div>
            <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control" %>
          </div>
            <%= f.submit "サインイン", class:"btn btn-lg btn-block btn-info mt-5" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
